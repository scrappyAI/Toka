# Toka Collaborative Auth - Environment Configuration Template
# Copy this file to auth.env and fill in your values
# This is the authentication-specific environment configuration

# =============================================================================
# GitHub OAuth Configuration (Required)
# =============================================================================

# GitHub App credentials (Required)
GITHUB_CLIENT_ID=your_github_app_client_id_here
GITHUB_CLIENT_SECRET=your_github_app_client_secret_here

# OAuth callback URL (default for local development)
REDIRECT_URI=http://localhost:3000/auth/callback

# =============================================================================
# JWT Configuration (Required)
# =============================================================================

# JWT secret for signing tokens (use a strong random secret in production)
JWT_SECRET=dev-secret-change-in-production

# JWT token expiration (in seconds)
JWT_EXPIRATION=86400

# =============================================================================
# GitHub Repository Configuration (Optional)
# =============================================================================

# GitHub organization/repository to check permissions
GITHUB_ORGANIZATION=your-github-username-or-org
GITHUB_REPOSITORY=your-repo-name

# GitHub token for API access
GITHUB_TOKEN=your_github_personal_access_token_here

# =============================================================================
# Server Configuration
# =============================================================================

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# =============================================================================
# Session Configuration
# =============================================================================

# Session configuration
SESSION_DURATION_HOURS=24
ENABLE_PKCE=true
SESSION_SECURE=true

# =============================================================================
# Database Configuration
# =============================================================================

# Database configuration (defaults to in-memory)
DATABASE_URL=sqlite:toka-auth.db
AUTH_DATABASE_URL=sqlite:///app/data/auth.db

# =============================================================================
# Security Configuration
# =============================================================================

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true

# =============================================================================
# Environment-Specific Settings
# =============================================================================

# Environment type
AUTH_ENV=development

# Logging
AUTH_LOG_LEVEL=debug 