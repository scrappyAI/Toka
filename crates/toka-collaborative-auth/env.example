# Toka Collaborative Auth - Environment Configuration
# Copy this file to .env and fill in your values

# Required: GitHub App credentials
GITHUB_CLIENT_ID=your_github_app_client_id_here
GITHUB_CLIENT_SECRET=your_github_app_client_secret_here

# OAuth callback URL (default for local development)
REDIRECT_URI=http://localhost:3000/auth/callback

# JWT secret for signing tokens (use a strong random secret in production)
JWT_SECRET=dev-secret-change-in-production

# Optional: GitHub organization/repository to check permissions
GITHUB_ORGANIZATION=your-github-username-or-org
GITHUB_REPOSITORY=your-repo-name

# Optional: Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Optional: Session configuration
SESSION_DURATION_HOURS=24
ENABLE_PKCE=true

# Optional: Database configuration (defaults to in-memory)
DATABASE_URL=sqlite:toka-auth.db 