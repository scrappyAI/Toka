{
  "$schema": "https://github.com/toka-ai/toka/.llm/schemas/date-contract-v1.json",
  "dateContract": {
    "version": "1.0.0",
    "enforcement": {
      "strict": true,
      "canonicalSource": "system_clock",
      "timezone": "UTC",
      "format": "%Y-%m-%d",
      "datetimeFormat": "%Y-%m-%dT%H:%M:%SZ"
    },
    "validation": {
      "allowFutureDates": false,
      "maxAgeDays": 365,
      "placeholderPattern": "2025-07-07",
      "exemptionPattern": "DATE:EXEMPT",
      "hardcodedPatterns": [
        "2024-01-01",
        "2024-01-01T00:00:00Z"
      ]
    },
    "tools": {
      "dateEnforcer": "scripts/date-enforcer.py",
      "toolRegistry": "scripts/tool-registry.py",
      "validationScript": "scripts/validate-dates.py"
    },
    "metadata": {
      "created": "2025-07-07T00:00:00Z",
      "lastModified": "2025-07-07T00:00:00Z",
      "maintainer": "Toka AI Team",
      "description": "Enforces deterministic, accurate dating through schema contracts and prevents date hallucination"
    }
  }
} 