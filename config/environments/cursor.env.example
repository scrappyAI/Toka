# Cursor Background Agent Environment Template
# Copy this file to .env.cursor and customize for your setup
# Minimal configuration for Cursor IDE background agents

# =============================================================================
# Cursor-Specific Configuration
# =============================================================================

# Cursor Agent Mode
CURSOR_AGENT_MODE=true
CURSOR_WEBSOCKET_ENABLED=false
CURSOR_API_INTEGRATION=false
CURSOR_WEBSOCKET_PORT=9001

# =============================================================================
# Minimal Resource Usage for Cursor Agents
# =============================================================================

# Agent Pool Configuration (Minimal)
AGENT_POOL_SIZE=1
MAX_CONCURRENT_AGENTS=1
AGENT_SPAWN_TIMEOUT=10
AGENT_WORKSTREAM_TIMEOUT=300

# Memory and Cache Settings (Minimal)
CONTEXT_CACHE_SIZE=128
CONTEXT_CACHE_TTL=600
RESPONSE_CACHE_SIZE=64
RESPONSE_CACHE_TTL=300

# =============================================================================
# Cursor LLM Configuration (Minimal)
# =============================================================================

# LLM Provider
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Settings (Conservative)
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_RATE_LIMIT=5
LLM_TIMEOUT=30
LLM_DEBUG=false

# =============================================================================
# Minimal Runtime Configuration
# =============================================================================

# Logging (Minimal)
RUST_LOG=warn
RUST_BACKTRACE=0
TOKA_LOG_LEVEL=warn

# Performance (Minimal)
TOKIO_WORKER_THREADS=1

# Security (Cursor-managed)
AGENT_SANDBOX_ENABLED=false
CAPABILITY_VALIDATION=permissive

# =============================================================================
# Cursor-Specific Overrides
# =============================================================================

# Disable features not needed for Cursor
METRICS_ENABLED=false
TRACING_ENABLED=false
ENABLE_SECURITY_SCANNING=false
ENABLE_PROFILING=false
ENABLE_FUZZING=false

# No database needed for cursor agents
# DATABASE_URL not required

# No networking needed for cursor agents
# TOKA_API_PORT not required

# No monitoring needed for cursor agents
# PROMETHEUS_PORT not required
# GRAFANA_PORT not required

# =============================================================================
# Environment Type
# =============================================================================

# Environment
TOKA_ENV=cursor
CURSOR_MODE=true

# Development flags (minimal)
DEBUG_MODE=false
VERBOSE_LOGGING=false
AGENT_DEV_MODE=false
AGENT_DEBUG_ENABLED=false 