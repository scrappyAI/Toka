# Toka OS Development Environment Template
# Copy this file to .env.dev and customize for development
# Development-optimized configuration with debugging enabled

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Anthropic Claude (Recommended for development)
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_RATE_LIMIT=30
LLM_TIMEOUT=45
LLM_DEBUG=true

# =============================================================================
# Database Configuration (Development)
# =============================================================================

# SQLite for development (no setup required)
DATABASE_URL=sqlite:///app/data/toka_dev.db
STORAGE_TYPE=sqlite

# =============================================================================
# Agent Configuration (Development)
# =============================================================================

# Agent Pool Settings (Development)
AGENT_POOL_SIZE=5
MAX_CONCURRENT_AGENTS=3
AGENT_SPAWN_TIMEOUT=60
AGENT_WORKSTREAM_TIMEOUT=1800

# Development-friendly Agent Settings
AGENT_SANDBOX_ENABLED=false
CAPABILITY_VALIDATION=permissive
AGENT_DEV_MODE=true
AGENT_DEBUG_ENABLED=true
AGENT_PROFILING_ENABLED=true

# =============================================================================
# Security Settings (Development)
# =============================================================================

# JWT Configuration (Development)
JWT_SECRET=dev-jwt-secret-not-for-production

# Security Features (Relaxed for development)
RUST_SECURE_ZERO_MEMORY=0
ENABLE_SECURITY_SCANNING=false
SECURITY_SCAN_INTERVAL=7200

# =============================================================================
# Performance Settings (Development)
# =============================================================================

# Rust Settings (Debug-friendly)
RUST_LOG=debug
RUST_BACKTRACE=1
RUSTFLAGS=-D warnings

# Tokio Runtime (Development)
TOKIO_WORKER_THREADS=2

# Caching Configuration (Small for development)
CONTEXT_CACHE_SIZE=512
CONTEXT_CACHE_TTL=3600
RESPONSE_CACHE_SIZE=256
RESPONSE_CACHE_TTL=1800

# Build Performance (Development)
CARGO_INCREMENTAL=1
CARGO_NET_RETRY=10
CARGO_BUILD_JOBS=2
MAKEFLAGS=-j2

# =============================================================================
# Environment Configuration (Development)
# =============================================================================

# Environment Type
TOKA_ENV=development
TOKA_LOG_LEVEL=debug

# Development Directories
AGENT_DATA_DIR=/app/data
AGENT_LOG_DIR=/app/logs
AGENT_CONFIG_DIR=/app/config

# =============================================================================
# Orchestration Settings (Development)
# =============================================================================

# Orchestration Engine (Development timeouts)
ORCHESTRATION_SESSION_TIMEOUT=3600
ORCHESTRATION_MAX_RETRIES=2
ORCHESTRATION_RETRY_DELAY=10

# Health Check Configuration (Development)
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=15
HEALTH_CHECK_RETRIES=2

# =============================================================================
# Port Configuration (Development)
# =============================================================================

# Core Services
TOKA_API_PORT=8080
AGENT_MGMT_PORT=9000
WEBSOCKET_PORT=9001

# Development Services
FRONTEND_PORT=3000
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
JAEGER_PORT=16686

# =============================================================================
# Development Features
# =============================================================================

# Debug Settings
DEBUG_MODE=true
VERBOSE_LOGGING=true
ENABLE_GDB=true
ENABLE_VALGRIND=false

# Testing Settings
ENABLE_FUZZING=false
FUZZ_TIMEOUT=60
ENABLE_PROFILING=true
PROFILING_INTERVAL=300

# Monitoring (Development)
METRICS_ENABLED=true
METRICS_INTERVAL=60
TRACING_ENABLED=true
LOG_LEVEL=debug

# =============================================================================
# Development Overrides
# =============================================================================

# Container Resource Limits (Development)
CONTAINER_MEMORY_LIMIT=1g
CONTAINER_CPU_LIMIT=1

# Hot Reloading (Development)
CARGO_WATCH_ENABLED=true
FILE_WATCHER_ENABLED=true

# Development Tools
ENABLE_EXPERIMENTAL=true
EXPERIMENTAL_FEATURES=hot-reload,debug-tools 